<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1 http://maven.apache.org/xsd/assembly-2.1.1.xsd">
    <id>zip</id>

    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${project.basedir}/src/main/resources/config/middletier-home.service</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/src/main//resources/config/middletier-home-dev.service</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory>/deploy/</outputDirectory>
            <destName>MiddleTier-Home-onejar.jar</destName>
            <fileMode>0775</fileMode>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${project.build.directory}/scripts/deploy/StopService.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>pre_deploy.sh</destName>
            <fileMode>0775</fileMode>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.build.directory}/scripts/deploy/StartService.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>post_deploy.sh</destName>
            <fileMode>0775</fileMode>
            <filtered>true</filtered>
        </file>
    </files>
